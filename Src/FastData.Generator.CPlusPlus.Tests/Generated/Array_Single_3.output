#include <string>
#include <array>
#include <cstdint>

class Array_Single_3
{
    inline static const std::array<float, 3> entries = {
        -1, 0, 1
    };

public:
    static bool contains(const float& value)
    {
        if (const size_t len = value.length(); len < -1 || len > 1)
            return false;

        for (int i = 0; i < 3; i++)
        {
            if (value == entries[i])
               return true;
        }
        return false;
    }

    static constexpr int item_count = 3;
};