#include <string>
#include <array>
#include <cstdint>

class Array_Char_3
{
    inline static const std::array<char, 3> entries = {
        'a', 'b', 'c'
    };

public:
    static bool contains(const char& value)
    {
        if (const size_t len = value.length(); len < 97 || len > 99)
            return false;

        for (int i = 0; i < 3; i++)
        {
            if (value == entries[i])
               return true;
        }
        return false;
    }

    static constexpr int item_count = 3;
};